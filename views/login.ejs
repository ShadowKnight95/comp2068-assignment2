<% include partials/header.ejs %>
<!-- allows the user to log in if all of the info is filled in and correct -->
<main class="w3-container">
  <div class="w3-padding-64">
    <h1>Login</h1>
  </div>

  <% if (messages.length > 0) { %>
    <div class="alert alert-danger"><%= messages %></div>
  <% } 
  else { %>
    <div class="w3-containter w3-black w3-center w3-opacity w3-padding">
      <h4 class="w3-margin w3-xmedium">Please enter your credentials</h4>
    </div>
    <br>
  <% } %>
  <form method="post">
    <div class="form-group">
      <label for="username" class="col-sm-2 control-label">Username: *</label>
      <input name="username" id="username" required />
    </div>
    <div class="form-group">
      <label for="password" class="col-sm-2 control-label">Password: *</label>
      <input name="password" id="password" type="password" required />
    </div>

    <button class="btn btn-success col-sm-offset-2">Login</button>
    <a href="/facebook">
      <img src="/images/facebook.png" alt="Log in with facebook"/>
    </a>
    <hr />
    <!-- offer the users to register for an account -->
    <div class="w3-content w3-text-grey w3-container">
    Need access?  <a href="/register" title="Register">Register</a>
    </div>
  </form>

</main>

