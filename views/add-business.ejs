/* File Description: adds a business to the list after taking in all of the required info */ -->

<% include partials/header.ejs %>

<h1>Business Details</h1>
<!-- add a business form -->
<form method="post">
  <div class="form-group">
    <label for="name" class="col-sm-2 control-label">Name:</label>
    <input name="name" id="name" required />
  </div>
  <div class="form-group">
    <label for="owner" class="col-sm-2 control-label">Owner:</label>
    <input name="owner" id="owner" />
  </div>
  <div class="form-group">
    <label for="year" class="col-sm-2 control-label">Year Established:</label>
    <input name="year" id="year" required type="number" max="2016" />
  </div>
  <div class="form-group">
    <label for="bType" class="col-sm-2 control-label">Type of Business:</label>
    <input name="bType" id="bType" required />
  </div>
  <div class="form-group">
    <label for="wifi" class="col-sm-2 control-label">Provides Free Wifi:</label>
    <input name="wifi" id="wifi" required />
  </div>
  <button class="btn btn-success col-sm-offset-2">Add</button>
</form>
