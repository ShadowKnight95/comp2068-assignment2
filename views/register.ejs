/* File Description: allow the user to register an account if all of the info was filled in and correct */ -->

<% include partials/header.ejs %>

<main class="w3-container">
  <div class="w3-padding-64">
    <h1>Register</h1>
  </div>
<!-- ensure that the user fills in the whole form and that the passwords match -->
  <form method="post" id="registerForm">
    <div class="form-group">
      <label for="username" class="col-sm-2 control-label">Username: *</label>
      <input name="username" id="username" required />
    </div>
    <div class="form-group">
      <label for="password" class="col-sm-2 control-label">Password: *</label>
      <input name="password" id="password" type="password" required />
    </div>
    <div class="form-group">
      <label for="confirm" class="col-sm-2 control-label">Confirm: *</label>
      <input name="confirm" id="confirm" type="password" required />
    </div>
    <div class="form-group">
      <button class="btn btn-success col-sm-offset-2">Register</button>
      <hr />
      <!-- offer the user to login to an already existing account -->
      Already have an account?  <a href="/login" title="Login">Login</a>
  </form>

</main>

